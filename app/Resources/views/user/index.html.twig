{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="pull-left">Registered users</h1>
                {% if is_granted('ROLE_ADMIN') %}
                  <a href="{{ path('user_new') }}" class="btn btn-primary pull-right" role="button">Register new User</a>
                {% endif %}
            </div>
        </div>
        <br><br><br>
        <div class="row">
            {% for user in users %}
            <!-- USER ITEM -->
            <div class="col-md-4">
                <div class="panel price panel-grey">
                    <div class="panel-heading arrow_box text-center">
                        <h3>{{ user.name | capitalize}}</h3>
                    </div>
                    <ul class="list-group list-group-flush text-left">
                        <li class="list-group-item"><i class="icon-ok text-success"></i><b>Email:</b> {{ user.email }}</li>
                        <li class="list-group-item"><i class="icon-ok text-success"></i><b>Products:</b> {{ user.products|length }}</li>
                    </ul>
                    <div class="panel-footer">
                    <div class="btn-group" role="group" aria-label="...">
                    {% if is_granted('ROLE_ADMIN')%}
                      <a class="btn btn-primary" href="{{ path('user_edit', { 'id': user.id }) }}">Edit User</a>
                      <a class="btn btn-primary" href="">Make Admin</a>
                    {% endif %}
                    <a class="btn btn-primary" href="{{ path('user_show', { 'id': user.id }) }}">See user</a>
                    </div>

                    </div>
                </div>
            </div>

            <!-- /USER ITEM -->
            {% endfor %}

        </div>
    </div>

{% endblock %}
