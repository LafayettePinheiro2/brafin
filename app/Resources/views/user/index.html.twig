{% extends 'base.html.twig' %}

{% block body %}
    {% block menu %}
        {{ parent() }}
    {% endblock %}


    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="pull-left">Registered users</h1>
                <a href="{{ path('user_new') }}" class="btn btn-primary pull-right" role="button">Register new User</a>
            </div>
        </div>
        <div class="row">
            {% for user in users %}
            <!-- USER ITEM -->
            <div class="col-md-3">
                <div class="panel price panel-grey">
                    <div class="panel-heading arrow_box text-center">
                        <h3>{{ user.name }}</h3>
                    </div>
                    <ul class="list-group list-group-flush text-center">
                        <li class="list-group-item"><i class="icon-ok text-success"></i> {{ user.name }}</li>
                        <li class="list-group-item"><i class="icon-ok text-success"></i> {{ user.surname }}</li>
                        <li class="list-group-item"><i class="icon-ok text-success"></i> {{ user.email }}</li>
                        <li class="list-group-item"><i class="icon-ok text-success"></i> <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a></li>
                    </ul>
                    <div class="panel-footer">
                        <a class="btn btn-lg btn-block btn-primary" href="{{ path('user_show', { 'id': user.id }) }}">See user</a>
                    </div>
                </div>
            </div>

            <!-- /USER ITEM -->
            {% endfor %}

        </div>
    </div>

{% endblock %}
