{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="header-page col-md-12">
                <a href="{{ path('user_index') }}" class="btn btn-primary pull-right" role="button">Back to user list</a>
                {% if app.user.id is defined and (app.user.id == app.request.get('id') or is_granted('ROLE_ADMIN')) %}
                    <a href="{{ path('conversation_index') }}" class="btn btn-primary pull-right" role="button">Messages</a>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-primary pull-right" role="button">Edit</a>
                {% endif %}

                {% if is_granted('ROLE_ADMIN')%}
                    {{ form_start(delete_form) }}
                        <input class="btn btn-danger pull-right" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                {% endif %}

                <h1 class="pull-left">{{ user.name | capitalize }}'s userpage.</h1>

                {% if app.user.id is defined and app.user.id == app.request.get('id')%}
                    <h4 class="pull-left">Here you can manage your products and your account.</h4>
                {% endif %}

                {% if app.user.id is defined and (app.user.id == app.request.get('id') and hasNewMsg) %}
                    <h4 style="color:red;" class="alert pull-right">You have unanswered messages!</h4>
                {% endif %}
            </div>
        </div>
        <br><br><br>
        <div class="row">
            {% if products|length > 0 %}
                {% for product in products %}

                <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading arrow_box text-center">
                            <a href="{{ path('product_show', { 'id': product.id }) }}"><h4>{{ product.name }}</h4></a>
                        </div>

                        <div class="panel-body-products panel-body text-center">
                            <ul class="list-group list-group-flush text-center">
                                {% if product.images|length > 0 %}
                                    <a href="{{ path('product_show', { 'id': product.id }) }}"><img src="{{ asset('uploads/' ~ product.images[0].path) }}" height="100" width="130"></a>
                                {% endif %}
                                <li class="list-group-item"><i class="icon-ok text-success"></i> Owner: {{ product.user }}</li>
                                {% if product.categories|length > 0 %}
                                    <li class="list-group-item">
                                        {% for category in product.categories %}
                                            <span class="product-category">
                                                {{ category.name }}
                                            </span>
                                        {% endfor %}
                                    </li>
                                {% endif %}
                                <li class="list-group-item"><i class=""></i> Available: {% if product.available %}Yes{% else %}No{% endif %}</li>
                            </ul>
                        </div>

                        <div class="panel-footer text-center">
                            <a class="btn btn-primary" href="{{ path('product_show', { 'id': product.id }) }}">Check it</a>
                        </div>
                    </div>
                </div>

                {% endfor %}
            {% else %}
                <h3 style="margin-top: 100px;" class="text-center">No products were posted by this user</h3>
            {% endif %}

        </div>
    </div>
{% endblock %}
