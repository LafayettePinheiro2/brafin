{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block body %}
    {% block menu %}
        {{ parent() }}
    {% endblock %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="pull-left">Edit user</h1>
                <a href="{{ path('user_index') }}" class="btn btn-primary pull-right" role="button">Back to the list</a>
                {{ form_start(delete_form) }}
                <input class="btn btn-primary pull-right" type="submit" value="Delete">
            {{ form_end(delete_form) }}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                {{ form_start(edit_form) }}
                    {{ form_row(edit_form.name) }}
                    {{ form_row(edit_form.surname) }}
                    {{ form_row(edit_form.email) }}
                    {{ form_row(edit_form.plainPassword.first) }}
                    {{ form_row(edit_form.plainPassword.second) }}
                     <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Edit User</button>
                        </div>
                    </div>
                {{ form_end(edit_form) }}

            </div>
        </div>
    </div>
{% endblock %}
