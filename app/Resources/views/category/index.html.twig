{% extends 'base.html.twig' %}

{% block body %}
    {% block menu %}
        {{ parent() }}
    {% endblock %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="pull-left">Category list</h1>
                <a href="{{ path('category_new') }}" class="btn btn-primary pull-right" role="button">Register a new Category</a>
            </div>
        </div>
        <div class="row">
            {% for category in categories %}
            <!-- CATEGORY ITEM -->
            <div class="col-md-3">
                <div class="panel price panel-grey">
                    <div class="panel-heading arrow_box text-center">
                        <h3>{{ category.name }}</h3>
                    </div>
                    <div class="panel-body text-center">
    {#                  <p class="lead" style="font-size:40px"><strong>$0 / month</strong></p>#}
                    </div>
                    <ul class="list-group list-group-flush text-center">
                        <li class="list-group-item"><i class="icon-ok text-success"></i> {{ category.name }}</li>
                        <li class="list-group-item"><i class="icon-ok text-success"></i> <a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a></li>
                    </ul>
                    <div class="panel-footer">
                        <a class="btn btn-lg btn-block btn-primary" href="{{ path('category_show', { 'id': category.id }) }}">See IT!</a>
                    </div>
                </div>
            </div>

            <!-- /CATEGORY ITEM -->
            {% endfor %}

        </div>
    </div>
{% endblock %}
