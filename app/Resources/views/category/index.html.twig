{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="header-page col-md-12">
                <h1 class="pull-left">Categories</h1>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('category_new') }}" class="btn btn-primary pull-right" role="button">Register a new Category</a>
                {% endif %}
            </div>
        </div>
            
        <div class="row">
            {% for category in categories %}
            <!-- CATEGORY ITEM -->
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading"></div>
                    <a href="{{ path('category_show', {'id' : category.id}) }}" class="category-panel-heading text-center">
                        <h3>{{ category.name }}</h3>
                    </a>
                    <div class="panel-footer"></div>
                </div>
            </div>
            <!-- /CATEGORY ITEM -->
            {% endfor %}

        </div>
    </div>
{% endblock %}
